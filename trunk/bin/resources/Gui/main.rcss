/* lagran in-game GUI css v0.1 */
body {
	font-family: Xirod;
	color: #288ce0;
}
#wrapper {
	width: 1280px;
	height: 768px;
	margin: 0 auto;
	position: relative;
}
#wrapper-inner {
	padding: 35px;
}

/* logo */
#logo {
	position: absolute;
	top: 500px;
	left: 500px;
	background-decorator: image;
	background-image-src: images/logo2.png;
	padding: 5px 0 0 893px;
	height: 445px;
	width: 0px;
}

/* health */
#health {
	position: absolute;
	top: 50px;
	left: 50px;
	background-decorator: image;
	background-image-src: images/icon_health.png;
	padding: 5px 0 0 85px;
	height: 75px;
	width: 0px;
}
#health_label {
}
#health_value {
	font-size: 3.4em;
}

/* energy */
#energy {
	position: absolute;
	left: 50px;
	top: 950px;
	background-decorator: image;
	background-image-src: images/icon_energy.png;
	padding:  2px 0 0 60px;
	height: 50px;
	width: 0px;
}

#energy_label {
	font-size: 0.8em;
}
#energy_value {
	font-size: 2em;
}

/* speed */
#speed {
	text-align: right;
	position: absolute;
	top: 950px;
	right: 150px;
	background-decorator: image;
	background-image-src: images/icon_energy.png;
	padding:  2px 0 0 60px;
	height: 50px;
	width: 0px;
}
#speed_label {
	font-size: 0.8em;	
}
#speed_value {
	font-size: 2em;
}
